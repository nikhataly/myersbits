
  <h3>Participation requests:</h3>
    <div class="well">
      <p><% (@user.membership_requests.where(approved: false)).each do |request| %>
        Wants to join: <%= request.project.title %> <br> Participant name: <%= request.user.name %> <br>Participant MBTI type: <%= request.user.personality.mbti %><br>
      <p>

      <p><%= button_to 'View participant profile', user_path(request.user),  :method => 'get' %></p>
      <p> <%= button_to 'View compatibility with participant', compatibilities_path,  :method => 'get' %> </p>
      <p> <%= button_to 'Accept participant request', project_membership_path(request.project, request), :method => 'put'%> </p>

    <% end %>
    </div>