
<% flash.each do |key, value| %>
   <div class="<%= flash_class(key) %> fade_in">

       <button class="close" data-dismiss="alert">Ã—</button>
         <%= value %>
   </div>
<% end %>

<div class="well">
<h1><%= @user.name %></h1>

<div class="avatar">
  <%= image_tag @user.avatar.url(:medium) %>
</div>


<p>
 <strong>MBTI profile: <%= @user.personality.mbti %></strong>
</p>



<section>
<h3><%= @user.name%>'s Projects</h3>
  <%= render @projects %>
</section>
</div>


<section>
  <%= form_tag projects_path, method: :get do %>
  <%= label_tag :search, "Find projects nearby" %>
  <%= search_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
  <% end %>
</section>