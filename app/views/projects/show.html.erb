<% flash.each do |key, value| %>
   <div class="<%= flash_class(key) %> fade_in">

       <button class="close" data-dismiss="alert">Ã—</button>
         <%= value %>
   </div>
<% end %>

<h1><%= @project.title %></h1>

<div id="project">
  <%= render @project %>
</div>



<div id="map-canvas" class="well" data-latitude="<%= @project.latitude.to_f %>" data-longitude="<%= @project.longitude.to_f%>"></div>

<div class="well">
<% if @nearby_projects.any? %>
  <h3><em>Nearby projects</em></h3>
  <ul>
  <% @nearby_projects.each do |np| %>
    <li> <%= "#{np.title }, #{np.distance} km "%> </li>
  <% end %>
</ul>
  <% end %>
  </div>


<% if current_user.is_participant?(@project) %>
  <%= render 'team' %>
<% end %>